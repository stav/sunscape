                    .col-lg-3.col-md-6.text-center
                        .mt-5
                            .mb-2
                                i.bi-nut.fs-1.text-primary
                            h3.h4.mb-2 American Precision
                            p.text-muted.mb-0 All parts manually punched and cut by industrial upcut saw by American craftsman
                    .col-lg-3.col-md-6.text-center
                        .mt-5
                            .mb-2
                                i.bi-wind.fs-1.text-primary
                            h3.h4.mb-2 Exceeds Spec
